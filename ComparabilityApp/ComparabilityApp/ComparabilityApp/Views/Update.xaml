<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComparabilityApp.Views.Update">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Update Profile!"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="Pic" Placeholder="PokeImage"/>
            <Entry x:Name="Location" Placeholder="Favorite Pokemon"/>
            <Entry x:Name="FavPokemon" Placeholder="Favorite Pokemon"/>
            <Entry x:Name="Hobbies" Placeholder="Hobbies"/>
            <Entry x:Name="Description" Placeholder="Description"/>

            <Button Text="Submit" Clicked="Updated"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>